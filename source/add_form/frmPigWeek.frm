Private Sub QueryData(Flag As Boolean)
Dim IsOK As Boolean
Dim ItemCount As Long
Dim Temp As Long

   If Flag Then
      Call EnableForm(Me, False)
      
'      If Not VerifyAccessRight("ADMIN_GROUP_QUERY") Then
'         Call EnableForm(Me, True)
'         Exit Sub
'      End If
      
